{
  "name": "buildkite-parse",
  "displayName": "buildkite-parse",
  "description": "",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": "https://github.com/ben-westphal/buildkite-parser",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:json",
    "workspaceContains:buildkite.yml",
    "workspaceContains:buildkite.yaml",
    "workspaceContains:buildkite.json",
    "workspaceContains:buildkite.*.yml",
    "workspaceContains:buildkite.*.yaml",
    "workspaceContains:buildkite.*.json",
    "workspaceContains:**/.buildkite/pipeline.yml",
    "workspaceContains:**/.buildkite/pipeline.yaml",
    "workspaceContains:**/.buildkite/pipeline.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "buildkite-parse.helloWorld",
        "title": "Buildkite Parser Active"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ["bkparse.config.json"],
        "url": "./src/schemas/bkparse.config.schema.json"
      }
    ]
  },
  "publisher": "TheDome",
  "icon": "images/icon.png",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "prepare": "npm run compile",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm install && npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build-version": "vsce package && mkdir -p dist && mv *.vsix dist/"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.30",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}